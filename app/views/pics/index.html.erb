<h1>Listing pics</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Pic image</th>
    <th>Likes</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pics.each do |pic| %>
  <tr>
    <td><%= pic.title %></td>
    <td><%= pic.pic_image %></td>
    <td><%= pic.likes %></td>
    <td><%= pic.user_id %></td>
    <td><%= link_to 'Show', pic %></td>
    <td><%= link_to 'Edit', edit_pic_path(pic) %></td>
    <td><%= link_to 'Destroy', pic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

